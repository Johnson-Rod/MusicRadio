{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es5",
        "strict": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "lib": [
            "es7",
            "es2017.object",
            "DOM"
        ],
        "outDir": "./build",
        "baseUrl": ".",
        "jsx": "react",
        "paths": {
            "root/*": ["./*"],
            "global/*": ["../*"]
        },
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "strictNullChecks": false,
        "resolveJsonModule": true
    },
    "files": ["app.ts"],
    "include": ["**/*.ts", "**/*.tsx", "./default/*.json", "./config/*.json", "./default/*", "./config/*"],
    "exclude": ["./test/*.ts"]
}